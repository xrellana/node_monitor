    <script>
        (() => {
            const root = document.documentElement;
            const media = window.matchMedia('(prefers-color-scheme: dark)');
            const storageKey = 'theme-preference';
            const validPreferences = new Set(['system', 'light', 'dark']);

            const normalizePreference = (value) => validPreferences.has(value) ? value : 'system';
            const resolveTheme = (preference) => {
                if (preference === 'light') return 'light';
                if (preference === 'dark') return 'dark';
                return media.matches ? 'dark' : 'light';
            };

            const readStoredPreference = () => {
                try {
                    return normalizePreference(localStorage.getItem(storageKey) || 'system');
                } catch (error) {
                    return 'system';
                }
            };

            const applyTheme = (preference) => {
                const normalized = normalizePreference(preference);
                const theme = resolveTheme(normalized);
                root.dataset.themePreference = normalized;
                root.setAttribute('data-theme', theme);
                document.dispatchEvent(new CustomEvent('theme-preference-change', {
                    detail: { preference: normalized, theme }
                }));
            };

            const setPreference = (preference) => {
                const normalized = normalizePreference(preference);
                try {
                    localStorage.setItem(storageKey, normalized);
                } catch (error) {
                    // Ignore storage failures and continue with in-memory state.
                }
                applyTheme(normalized);
            };

            const currentPreference = readStoredPreference();
            applyTheme(currentPreference);

            const handleSystemChange = () => {
                if ((root.dataset.themePreference || 'system') === 'system') {
                    applyTheme('system');
                }
            };

            if (typeof media.addEventListener === 'function') {
                media.addEventListener('change', handleSystemChange);
            } else if (typeof media.addListener === 'function') {
                media.addListener(handleSystemChange);
            }

            window.__themeControls = {
                getPreference: () => normalizePreference(root.dataset.themePreference || 'system'),
                setPreference
            };
        })();
    </script>
