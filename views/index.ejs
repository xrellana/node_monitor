    <script>
        (() => {
            const controls = window.__themeControls;
            const buttons = Array.from(document.querySelectorAll('[data-theme-option]'));
            if (!controls || buttons.length === 0) return;

            const validPreferences = new Set(['system', 'light', 'dark']);
            const normalizePreference = (value) => validPreferences.has(value) ? value : 'system';

            const setActiveButton = (preference) => {
                const normalized = normalizePreference(preference);
                buttons.forEach((button) => {
                    const active = button.dataset.themeOption === normalized;
                    button.classList.toggle('btn-active', active);
                    button.setAttribute('aria-pressed', String(active));
                });
            };

            setActiveButton(controls.getPreference());

            buttons.forEach((button) => {
                button.addEventListener('click', () => {
                    const preference = normalizePreference(button.dataset.themeOption);
                    controls.setPreference(preference);
                    setActiveButton(preference);
                });
            });

            document.addEventListener('theme-preference-change', (event) => {
                setActiveButton(event.detail?.preference);
            });
        })();
    </script>
